{
  "scripts": {
    "test": "jest --coverage",
    "jshint": "jshint --exclude ./node_modules,./coverage .",
    "jscpd": "jscpd --ignore \"**/*.min.js,**/*.map\" --format \"javascript\" --threshold 0 database.js index.js mqttConf.js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [ "default", "jest-junit" ]
 }
}